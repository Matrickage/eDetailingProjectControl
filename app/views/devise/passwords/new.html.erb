<div class="login-layout pass-layout">
<h2>Forgot your password?</h2>

<%= form_for(resource, :as => resource_name, :url => password_path(resource_name), :html => { :method => :post }) do |f| %>
  <%= devise_error_messages! %>

  <div class="field"><%= f.label :email %><%= f.email_field :email, :autofocus => true %><div class="clear"></div> </div>
  <div class="field"><%= render "devise/shared/links" %></div>
  <div class="btn field"><%= f.submit "Send me reset password instructions" %><div class="clear"></div></div>
<% end %>

</div>
